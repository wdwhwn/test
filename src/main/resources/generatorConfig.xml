<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- 
		创建类的依据  库表 
		连接数据库     驱动jar
	 -->
	 <!-- 指向驱动  easyui为项目名 需要更改-->
	 <classPathEntry location="D:\maven repository\mysql\mysql-connector-java\5.1.31\mysql-connector-java-5.1.31.jar"/>
	 <!-- 核心标签    id: 标识-->
	 <!-- 配置数据源和生成的代码所存放的位置 -->
	<context id="testTable" targetRuntime="MyBatis3Simple">
		<!-- 生成toString方法 -->
		<plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
		<!-- 实现序列化接口 -->
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
		<commentGenerator>
		<!-- 	指定是否生成注释    默认值：false 生成英文注释 
		suppressAllComments
		-->
			<property name="suppressAllComments" value="true"/>
		</commentGenerator>
		<!-- 	 连接数据库 -->
	 <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://211.149.140.247:3306/test?characterEncoding=utf8" userId="root" password="root"/>
	<!--  指定entity的生成路径 easyui为项目名，不同项目需要更改 -->
	 
	 <javaModelGenerator targetPackage="com.jz.entity" targetProject="src/main/java"/>
	 <!-- 指定mapper的生成路径  -->
	  <sqlMapGenerator targetPackage="com.jz.dao" targetProject="src/main/resources"></sqlMapGenerator>
	 
	 	<!-- 指定dao的生成路径
	 	type: 指定开发模式 
	 	  1. 基于注解式开发    ANNOTATEDMAPPER
	 	  2. 基于mapper开发  XMLMAPPER -->
	 
	 <javaClientGenerator targetPackage="com.jz.dao" type="XMLMAPPER" targetProject="src/main/java"/>
		<!-- tableNAme 表名 domainObjectName= 指定生成后的实体名字 -->
		<table tableName="t_user" domainObjectName="User"></table>
	 </context>
</generatorConfiguration>
